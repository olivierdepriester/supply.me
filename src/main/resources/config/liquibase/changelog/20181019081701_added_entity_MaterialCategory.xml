<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity MaterialCategory.
    -->
    <changeSet id="20181019081701-1" author="jhipster">
        <createTable tableName="material_category">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="creation_date" type="datetime">
                <constraints nullable="false" />
            </column>

            <column name="parent_material_category_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="creation_user_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="material_category" columnName="creation_date" columnDataType="datetime"/>

    </changeSet>

    <changeSet id="20181019170000-2" author="olivier">
        <addColumn tableName="material">
            <column name="material_category_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="material_category_id"
                baseTableName="material"
                constraintName="fk_material_material_category_id"
                referencedColumnNames="id"
                referencedTableName="material_category"/>
        <addNotNullConstraint columnDataType="bigint"
            columnName="material_category_id"
            defaultNullValue="4451"
            tableName="material"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
